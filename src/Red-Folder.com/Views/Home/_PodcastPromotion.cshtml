@model RedFolder.com.ViewModels.Podcast

<rfc-inline-style css-file="Home/_PodcastPromotions.css"></rfc-inline-style>

<div class="podcast-promotion">
    <div class="title">
        <h2>Podcast</h2>
        <p>Home of the</p>
        <p><strong>Better&nbsp;ROI&nbsp;from&nbsp;Software&nbsp;Development</strong></p>
        <p>Podcast</p>
    </div>

    <div class="body">
        <div class="podcast-logo">
            <img src="~/images/PodcastLogo.png" />
        </div>
        <div class="latest-podcast">
            <h3>Latest episode:</h3>
            <p>@Model.Item.Title</p>
            <p>Published: @Model.Item.PublishingDateString</p>
            <a class="btn btn-primary" href="/podcasts/@RedFolder.Utils.SafeUrl.MakeSafe(Model.Item.Title)">
                <i class="fa fa-play-circle" aria-hidden="true"></i>&nbsp;Listen now
            </a>
            <p>Or on your favourite podcast app:</p>
            <p>
                @Html.Partial("_PodcastersList")
            </p>
        </div>
    </div>
</div>