@model List<RedFolder.ViewModels.Service>

<rfc-inline-style css-file="Services/_ServiceList.css"></rfc-inline-style>

<div class="service-list">
    <div class="title">
        <h2>Services</h2>
    </div>
    <div class="body">
        @foreach (var service in Model)
        {
            <div class="service">
                <div class="title">
                    <h3>@service.Title</h3>
                </div>
                <div class="description">
                    @foreach (var description in service.Description)
                    {
                        <p>@description</p>
                    }
                </div>
            </div>
        }
    </div>
</div>
