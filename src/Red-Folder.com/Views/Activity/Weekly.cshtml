@model Red_Folder.com.ViewModels.Activity.WeekSummary

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Weekly Activity - Week @Model.WeekNumber of @Model.Year</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <style>
        body {
            display: grid;
            grid-template-columns: 33% 33% 33%;
            grid-template-areas: @Html.Raw(Model.GridTemplateAreas);
        }

        @Html.Raw(Model.GridAreas)

        #title {
            grid-area: title;
        }

        #footer-left {
            grid-area: footer-left;
        }

        #footer-middle {
            grid-area: footer-middle;
        }

        #footer-right {
            grid-area: footer-right;
        }

        #header-section {
            grid-area: header-section;
        }

        #what-is-this-logo {
            grid-area: what-is-this-logo;
        }

        #what-is-this-section {
            grid-area: what-is-this-section;
        }

        #focus-logo {
            grid-area: focus-logo;
        }

        #focus-section {
            grid-area: focus-section;
        }

        #clients-logo {
            grid-area: clients-logo;
        }

        #clients-section {
            grid-area: clients-section;
        }


        #podcasts-summary-logo {
            grid-area: podcasts-summary-logo;
        }

        #podcasts-summary-section {
            grid-area: podcasts-summary-section;
            margin-right: 15px;
        }

        #skills-summary-logo {
            grid-area: skills-summary-logo;
        }

        #skills-summary-section {
            grid-area: skills-summary-section;
        }

        #pluralsight-logo {
            grid-area: pluralsight-logo;
        }

        #pluralsight-section {
            grid-area: pluralsight-section;
        }

            .pluralsight-section > div {
                margin: 15px;
                display: grid;
                grid-template-columns: 180px * 20%;
                grid-template-areas: "course-logo course-description course-completion";
            }

            .pluralsight-section div .course-logo {
                grid-area: course-logo;
            }

            .pluralsight-section div .course-description {
                grid-area: course-description;
            }

                .pluralsight-section div .course-description h3 {
                    margin-top: 0px;
                    padding-left: 15px;
                }

                .pluralsight-section div .course-description p {
                    padding-left: 15px;
                }

            .pluralsight-section div .course-completion {
                grid-area: course-completion;
                text-align: right;
            }

                .pluralsight-section div .course-completion span {
                    font-size: 50px;
                    color: rgba(44, 160, 44, 1);
                }

                .pluralsight-section div .course-completion canvas {
                    display: inline;
                }

        #podcasts-detail-logo {
            grid-area: podcasts-detail-logo;
            display: none;
        }

        #podcasts-detail-section {
            grid-area: podcasts-detail-section;
            display: none;
        }

        .footer {
            background-color: #e74c3c;
            color: white;
            font-size: 25px;
            padding: 0px;
            text-align: center;
            margin: 0px;
        }

        #footer-left, #footer-right {
            padding: 12px;
        }

        #footer-middle > img {
            height: 50px;
        }

        h1 {
            font-size: 45px;
            margin-top: 0px;
            margin-bottom: 0px;
        }

        h2 {
            background-color: #e74c3c;
            color: white;
            padding-left: 5px;
            padding-right: 5px;
            display: inline;
        }

        #title {
            color: white;
            font-family: Tahoma, Verdana, sans-serif;
            background-color: #e74c3c;
            text-align: center;
            margin: 0px;
            margin-top: 10px;
            margin-bottom: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
        }

        #title p {
            margin-bottom: 0px;
            margin-top: 0px;
        }

        p {
            margin-top: 5px;
            padding-left: 15px;
        }

        #podcastChart {
            margin-top: 15px;
            margin-bottom: 15px;
        }
    </style>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
    <script type="text/javascript" src="https://d3js.org/d3.v3.min.js" /></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/d3-cloud/1.2.5/d3.layout.cloud.min.js"></script>
    <script src="~/lib//chartjs-plugin-labels//build/chartjs-plugin-labels.min.js"></script>
</head>

<body>
    <div id="title">
        <h1>The weekly retro ...</h1>
        <p>
            My shameless self-promotion of what I've been upto over the last week
        </p>
        <p>
            Week @Model.WeekNumber (@Model.Start.ToShortDateString() - @Model.End.ToShortDateString())
        </p>
    </div>

    @if (Model.PodCasts != null && Model.PodCasts.Display)
    {
        Html.RenderPartial("_PodcastSummaryActivity", Model.PodCasts);
    }

    @if (Model.Skills != null && Model.Skills.Display)
    {
        Html.RenderPartial("_SkillsActivity", Model.Skills);
    }

    @if (Model.Pluralsight != null && Model.Pluralsight.Display)
    {
        Html.RenderPartial("_PluralsightActivity", Model.Pluralsight);
    }

    @if (Model.Focus != null && Model.Focus.Display)
    {
        Html.RenderPartial("_FocusActivity", Model.Focus);
    }

    @if (Model.Clients != null && Model.Clients.Display)
    {
        Html.RenderPartial("_ClientsActivity", Model.Clients);
    }

    <div id="footer-left" class="footer">
        @@redfoldermark
    </div>
    <div id="footer-middle" class="footer"> 
        <img src="~/images/RFCLogo128.png" />
    </div>
    <div id="footer-right" class="footer">
        https://red-folder.com
    </div>

    <script>
        window.onload = function () {
            if (window.graphs) {
                Object.keys(window.graphs).forEach(key => {
                    var graph = window.graphs[key];
                    graph.chart = new Chart(document.getElementById(graph.elementId), graph.config);
                });
            }
            if (window.clouds) {
                Object.keys(window.clouds).forEach(key => {
                    var cloud = window.clouds[key];
                    cloud.start();
                })
            }
        }
    </script>

</body>

</html>