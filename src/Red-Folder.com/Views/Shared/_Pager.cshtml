@model RedFolder.ViewModels.IPager

@if (Model.Pages > 1)
{
    <div class="row pager">
        @if (Model.PageNo == 1)
        {
            <div class="btn btn-default disabled btn-xs">
                First
            </div>

            <div class="btn btn-default disabled btn-xs">
                Previous
            </div>
        }
        else
        {
            <div class="btn btn-default btn-xs selectable" onclick="pageConfig.firstPage()">
                First
            </div>

            <div class="btn btn-default btn-xs selectable" onclick="pageConfig.previousPage()">
                Previous
            </div>
        }

        <div class="page-no">
            @Model.PageNo of @Model.Pages
        </div>

        @if (Model.PageNo == Model.Pages)
        {
            <div class="btn btn-default disabled btn-xs">
                Next
            </div>

            <div class="btn btn-default disabled btn-xs">
                Last
            </div>
        }
        else
        {
            <div class="btn btn-default btn-xs selectable" onclick="pageConfig.nextPage()">
                Next
            </div>

            <div class="btn btn-default btn-xs selectable" onclick="pageConfig.lastPage()">
                Last
            </div>
        }
    </div>
}
