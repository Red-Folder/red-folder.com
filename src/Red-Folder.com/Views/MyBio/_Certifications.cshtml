@model RedFolder.ViewModels.Certification[]

<rfc-inline-style css-file="MyBio/_Certifications.css"></rfc-inline-style>

<div class="certifications">
    <div class="container">
        <div class="intro">
            <h2 class="text-center">Certifications and Exams</h2>
        </div>

        <div class="row people">
            @foreach (var certification in Model)
            {
                <div class="col-xs-12 col-md-6 item" style="min-height: 450px;">
                    <div class="box">
                        <a href="@certification.Link">
                            <img class="img-responsive center-block" style="min-height:125px;" src="@certification.ImageUrl" />
                        </a>
                        <h3>@certification.Title</h3>
                        <p><small>@certification.Date</small></p>
                        <p class="description">@certification.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
