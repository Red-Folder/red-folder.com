<div class="center-content">
    <h3>Work History</h3>
    @foreach (var employment in Model)
    {
        <div class="row">
            <div class="col-xs-12">
                <h4 class="rfc-list-title">@employment.Title</h4>
                <p><small>@employment.From to @employment.To</small></p>

                @if (employment.Summary != null)
                {
                    <p>
                        @employment.Summary
                    </p>
                }

                @if (employment.Technologies != null && employment.Technologies.Count > 0)
                {
                    <p>
                        Key Technologies:
                        <ul>
                            @foreach (var technology in employment.Technologies)
                            {
                                <li class="skill-label">@technology</li>
                            }
                        </ul>

                    </p>
                }
            </div>
        </div>
    }
</div>

